<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.streams</groupId>
	<artifactId>streams-parent</artifactId>
	<version>0.2.0</version>
	<packaging>pom</packaging>

	<name>streams-parent</name>
	<url>http://code.google.com/p/bigstreams</url>

	<properties>
		<cglib.version>2.2</cglib.version>
		<spring.version>3.0.4.RELEASE</spring.version>
		<javax.inject.version>1</javax.inject.version>
		<commons-io.version>1.4</commons-io.version>
		<commons-cli.version>1.2</commons-cli.version>
		<commons-configuration.version>1.6</commons-configuration.version>
		<junit.version>4.8.1</junit.version>
		<log4j.version>1.2.16</log4j.version>
		<hadoop.version>0.20.2</hadoop.version>
		<slf4j-simple.version>1.4.2</slf4j-simple.version>
		<restlet.version>2.0-M7</restlet.version>
		<netty.version>3.2.4.Final</netty.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<dependencies>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${junit.version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-configuration</groupId>
			<artifactId>commons-configuration</artifactId>
			<version>${commons-configuration.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-cli</groupId>
			<artifactId>commons-cli</artifactId>
			<version>${commons-cli.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${commons-io.version}</version>
		</dependency>
		<dependency>
			<groupId>javax.inject</groupId>
			<artifactId>javax.inject</artifactId>
			<version>${javax.inject.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-beans</artifactId>
			<version>${spring.version}</version>
		</dependency>
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib-nodep</artifactId>
			<version>${cglib.version}</version>
		</dependency>

		<dependency>
			<groupId>org.apache.hadoop</groupId>
			<artifactId>hadoop-core</artifactId>
			<version>${hadoop.version}</version>
			<exclusions>
				<exclusion>
					<groupId>hsqldb</groupId>
					<artifactId>hsqldb</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
                <extensions>
	 	     <extension>
	        	<groupId>org.jvnet.wagon-svn</groupId>
		        <artifactId>wagon-svn</artifactId>
		        <version>1.8</version>
		      </extension>
	        </extensions>

	</build>

<distributionManagement>
    <repository>
        <id>streams-releases</id>
        <name>streams releases maven repository</name>
        <url>svn:https://bigstreams.googlecode.com/svn/mvnrepo/releases</url>
        <uniqueVersion>false</uniqueVersion>
    </repository>
    <snapshotRepository>
        <id>streams-snapshots</id>
        <name>streams snapshot maven repository</name>
        <url>svn:https://bigstreams.googlecode.com/svn/mvnrepo/snapshots</url>
        <uniqueVersion>false</uniqueVersion>
    </snapshotRepository>
</distributionManagement>




	<modules>
		<module>agent</module>
		<module>commons</module>
		<module>collector</module>
		<module>collector-coordination</module>
  </modules>
</project>
